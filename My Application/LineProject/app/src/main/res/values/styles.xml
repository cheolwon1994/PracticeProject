<resources>

    <!-- Base application theme. ++ NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ListDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">#999999</item>
    </style>

    <style name="Full" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorPink</item>
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="ListDividerVertical">
        <item name="android:layout_width">1sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#999999</item>
    </style>

    <style name="RecipeFormTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">#E82D50</item>
    </style>

    <style name = "RecipeFormAddButtonStyle">
        <item name="android:background">@drawable/ic_add_circle_outline_pink_24dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Ingredient">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background"></item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text22Semi">
    </style>
    <style name="Text22SemiWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MenuItem">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="searchViewWhite" >
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
